@{
    ViewBag.Title = "Student Main Dashboard";
}

<style>
    .big-menu {
        display: flex;
        gap: 50px;
        justify-content: center;
        margin-top: 70px;
    }

    .menu-card {
        width: 240px;
        height: 320px;
        background: #f8faff;
        border-radius: 30px;
        box-shadow: 0 8px 22px #ccd;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-size: 1.2em;
        text-decoration: none;
        color: #222;
        transition: box-shadow .2s;
    }

        .menu-card:hover {
            box-shadow: 0 16px 44px #aab;
            background: #e3eeff;
        }

    .icon-circle {
        width: 100px;
        height: 100px;
        background: #c2c7d6;
        border-radius: 50%;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5em;
    }
</style>

<h2 style="text-align:center;">Welcome, Student!</h2>
<div class="big-menu">
    <a href="/Student/Dashboard" class="menu-card">
        <div class="icon-circle">👤</div>
        <div>Student Dashboard</div>
    </a>
    <a href="/Student/SelectFaculty" class="menu-card">
        <div class="icon-circle">🎓</div>
        <div>Select Faculty</div>
    </a>
    <a href="/Student/AssignedFaculty" class="menu-card">
        <div class="icon-circle">🧑‍🏫</div>
        <div>Assigned Faculty</div>
    </a>
</div>
