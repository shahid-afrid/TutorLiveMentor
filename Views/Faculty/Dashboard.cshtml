@model TutorLiveMentor.Models.Faculty

<h2 style="text-align:center; margin-bottom:30px;">Welcome @Model.Name!</h2>

<div style="display: flex; gap: 48px; justify-content: center;">
    <!-- Profile Card (Clickable link to Profile view) -->
    <a href="@Url.Action("Profile", "Faculty")" style="text-decoration:none; color:inherit;">
        <div style="width:230px; height:300px; background:#f8f8fc; border-radius:16px; box-shadow:0 3px 14px #e0e0ee; display:flex; flex-direction:column; align-items:center; justify-content:center;">
            <div style="width:80px; height:80px; border-radius:40px; background:#e8e8ed; display:flex; align-items:center; justify-content:center; margin-bottom:14px;">
                <span style="font-size:44px;">👤</span>
            </div>
            <h4 style="margin-bottom:8px;">Profile</h4>
            <p style="font-size:15px; margin-bottom:12px;">@Model.Name</p>
            <p style="font-size:15px; margin-bottom:20px;">@Model.Email</p>
            <span style="text-decoration:underline; color:#3366cc; margin-bottom:8px;">View Profile</span>
        </div>
    </a>

    <!-- Students Enrolled Card -->
    <div style="width:230px; height:300px; background:#f8f8fc; border-radius:16px; box-shadow:0 3px 14px #e0e0ee; display:flex; flex-direction:column; align-items:center; justify-content:center;">
        <div style="margin-bottom:14px;">
            <span style="font-size:44px;">🎓</span>
        </div>
        <h4 style="margin-bottom:8px;">Students Enrolled</h4>
        <a href="@Url.Action("StudentsEnrolled", "Faculty")">View List</a>
    </div>

    <!-- Assigned Subjects Card -->
    <div style="width:230px; height:300px; background:#f8f8fc; border-radius:16px; box-shadow:0 3px 14px #e0e0ee; display:flex; flex-direction:column; align-items:center; justify-content:center;">
        <div style="margin-bottom:14px;">
            <span style="font-size:44px;">📚</span>
        </div>
        <h4 style="margin-bottom:8px;">Assigned Subjects</h4>
        <a href="@Url.Action("AssignedSubjects", "Faculty")">View Subjects</a>
    </div>
</div>
